import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        boolean loop = true;

        do {
            System.out.println("\n=== PILIH HEWAN ===");
            System.out.println("1. Kucing");
            System.out.println("2. Anjing");
            System.out.println("3. Keluar");
            System.out.print("Masukkan pilihan : ");
            int pilih = input.nextInt();
            input.nextLine(); // membersihkan buffer

            switch (pilih) {
                case 1:
                    System.out.print("Masukkan nama kucing : ");
                    String namaKucing = input.nextLine();
                    System.out.print("Masukkan umur kucing : ");
                    int umurKucing = input.nextInt();
                    input.nextLine();

                    Kucing kucing = new Kucing(namaKucing, umurKucing);
                    System.out.print("Apakah ini hewan peliharaan atau ternak? ");
                    String jenisKucing = input.nextLine();

                    kucing.infoHewan(jenisKucing);
                    kucing.makanan();
                    kucing.bersuara();
                    break;

                case 2:
                    System.out.print("Masukkan nama anjing : ");
                    String namaAnjing = input.nextLine();
                    System.out.print("Masukkan umur anjing : ");
                    int umurAnjing = input.nextInt();
                    input.nextLine();

                    Anjing anjing = new Anjing(namaAnjing, umurAnjing);
                    System.out.print("Apakah ini hewan peliharaan atau ternak? ");
                    String jenisAnjing = input.nextLine();

                    anjing.infoHewan(jenisAnjing);
                    anjing.makanan();
                    anjing.bersuara();
                    break;

                case 3:
                    System.out.println("Terima kasih! Program selesai.");
                    loop = false;
                    break;

                default:
                    System.out.println("Pilihan tidak valid!");
                    break;
            }
        } while (loop);

        input.close();
    }
}


public class Hewan {
    protected String nama;
    protected int umur;
    protected int kaki;

    public Hewan(String nama, int umur, int kaki) {
        this.nama = nama;
        this.umur = umur;
        this.kaki = kaki;
    }

    public void infoHewan(String jenis) {
        System.out.println("\n=== Info Hewan ===");
        System.out.println("Nama : " + this.nama);
        System.out.println("Umur : " + this.umur + " tahun");
        System.out.println("Jumlah kaki : " + this.kaki);
        System.out.println("Jenis : Hewan " + jenis);
    }

    public void makanan() {
        System.out.print("Makanan : ");
    }

    public void bersuara() {
        System.out.println("Hewan bersuara...");
    }
}



public class Anjing extends Hewan {
    public Anjing(String nama, int umur) {
        super(nama, umur, 4);
    }

    @Override
    public void bersuara() {
        System.out.println("Guk guk!");
    }

    @Override
    public void makanan() {
        super.makanan();
        if (umur < 5) {
            System.out.println("Minum susu.");
        } else {
            System.out.println("Makan daging.");
        }
    }
}



public class Kucing extends Hewan {
    public Kucing(String nama, int umur) {
        super(nama, umur, 4);
    }

    @Override
    public void bersuara() {
        System.out.println("Meong!");
    }

    @Override
    public void makanan() {
        super.makanan();
        if (umur < 5) {
            System.out.println("Makan whiskas.");
        } else {
            System.out.println("Makan segala.");
        }
    }
}


