#include <iostream>
using namespace std;

class Perkalian {
private:
    int jumlah;

public:
    void input();
    void tampilkanHasil(int angka);
};

void Perkalian::input() {
    cout << "program perkalian\n";
    cout << "==============================\n";
    cout << "masukkan banyak perkalian= ";
    cin >> jumlah;
    tampilkanHasil(8); // Contoh bilangan tetap, seperti di gambar: 8
}

void Perkalian::tampilkanHasil(int angka) {
    for (int i = 0; i < jumlah; i++) {
        cout << i << " * " << angka << " = " << i * angka << endl;
    }
}

int main() {
    Perkalian p;
    p.input();
    return 0;
}
